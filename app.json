{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "nl.jwienk.todoist",
  "version": "1.0.1",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#db4035",
  "name": {
    "en": "Todoist"
  },
  "description": {
    "en": "The to do list to organize work & life."
  },
  "category": [
    "tools",
    "internet"
  ],
  "tags": {
    "en": [
      "todo",
      "todo list",
      "tasks"
    ]
  },
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Jeroen Wienk",
    "email": "jeroenwienk@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/jeroenwienk/nl.jwienk.todoist/issues"
  },
  "source": "https://github.com/jeroenwienk/nl.jwienk.todoist",
  "homepage": "https://github.com/jeroenwienk/nl.jwienk.todoist",
  "support": "mailto:jeroenwienk@gmail.com",
  "flow": {
    "triggers": [
      {
        "id": "trigger_event_task",
        "title": {
          "en": "A task was..."
        },
        "titleFormatted": {
          "en": "A task was [[event_name]]"
        },
        "hint": {
          "en": "Events might have slight delays (0-30sec)."
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=user"
          },
          {
            "type": "dropdown",
            "name": "event_name",
            "title": {
              "en": "Event"
            },
            "values": [
              {
                "id": "item:completed",
                "label": {
                  "en": "Completed"
                }
              },
              {
                "id": "item:uncompleted",
                "label": {
                  "en": "Uncompleted"
                }
              }
            ]
          }
        ],
        "tokens": [
          {
            "name": "content",
            "type": "string",
            "title": {
              "en": "Content"
            },
            "example": {
              "en": "Do the laundry"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "action_project_task",
        "title": {
          "en": "Create a project task..."
        },
        "titleFormatted": {
          "en": "Create a task [[content]] in [[project]]"
        },
        "hint": {
          "en": "Creates a task in the selected project."
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=user"
          },
          {
            "type": "text",
            "name": "content",
            "placeholder": {
              "en": "Do the laundry"
            }
          },
          {
            "type": "autocomplete",
            "name": "project",
            "placeholder": {
              "en": "Search for projects..."
            },
            "title": {
              "en": "Project"
            }
          }
        ]
      },
      {
        "id": "action_project_due_date_task",
        "title": {
          "en": "Create a project task with a due date..."
        },
        "titleFormatted": {
          "en": "Create a task [[content]] in [[project]] and due date [[due_date]]"
        },
        "hint": {
          "en": "Creates a task in the selected project with a due date."
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=user"
          },
          {
            "type": "text",
            "name": "content",
            "placeholder": {
              "en": "Do the laundry"
            }
          },
          {
            "type": "autocomplete",
            "name": "project",
            "title": {
              "en": "Project"
            },
            "placeholder": {
              "en": "Search for projects..."
            }
          },
          {
            "type": "date",
            "name": "due_date",
            "title": {
              "en": "Due date"
            },
            "placeholder": {
              "en": "Due date..."
            }
          }
        ]
      },
      {
        "id": "action_project_due_date_due_time_task",
        "title": {
          "en": "Create a project task with a due date and a due time..."
        },
        "titleFormatted": {
          "en": "Create a task [[content]] in [[project]] and due date [[due_date]] and due time [[due_time]]"
        },
        "hint": {
          "en": "Creates a task in the selected project with a due date and a due time."
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=user"
          },
          {
            "type": "text",
            "name": "content",
            "placeholder": {
              "en": "Do the laundry"
            }
          },
          {
            "type": "autocomplete",
            "name": "project",
            "title": {
              "en": "Project"
            },
            "placeholder": {
              "en": "Search for projects..."
            }
          },
          {
            "type": "date",
            "name": "due_date",
            "title": {
              "en": "Due date"
            },
            "placeholder": {
              "en": "Due date..."
            }
          },
          {
            "type": "time",
            "name": "due_time",
            "title": {
              "en": "Due time"
            },
            "placeholder": {
              "en": "Due time..."
            }
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "user",
      "name": {
        "en": "Todoist User"
      },
      "class": "other",
      "capabilities": [],
      "images": {
        "large": "/drivers/user/assets/images/large.png",
        "small": "/drivers/user/assets/images/small.png"
      },
      "icon": "/drivers/user/assets/icon.svg",
      "pair": [
        {
          "id": "login_oauth2",
          "template": "login_oauth2"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "repair": [
        {
          "id": "login_oauth2",
          "template": "login_oauth2"
        }
      ]
    }
  ]
}