{
  "id": "nl.jwienk.todoist",
  "version": "1.2.3",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#db4035",
  "name": {
    "en": "Todoist",
    "nl": "Todoist"
  },
  "description": {
    "en": "The to do list to organize work & life.",
    "nl": "The to do list to organize work & life."
  },
  "category": ["internet", "tools"],
  "tags": {
    "en": ["todo", "todo list", "tasks", "task list", "organize"],
    "nl": ["todo", "todo lijst", "taken", "taken lijst", "organiseren"]
  },
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Jeroen Wienk",
    "email": "jeroenwienk@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/jeroenwienk/nl.jwienk.todoist/issues"
  },
  "source": "https://github.com/jeroenwienk/nl.jwienk.todoist",
  "homepage": "https://todoist.com/",
  "support": "mailto:jeroenwienk@gmail.com",
  "homeyCommunityTopicId": 42818,
  "api": {
    "getUsers": {
      "method": "GET",
      "path": "/users"
    },
    "getUser": {
      "method": "GET",
      "path": "/users/:userId"
    },
    "getUserProjects": {
      "method": "GET",
      "path": "/users/:userId/projects"
    },
    "getUserProject": {
      "method": "GET",
      "path": "/users/:userId/projects/:projectId"
    },
    "getUserProjectTasks": {
      "method": "GET",
      "path": "/users/:userId/projects/:projectId/tasks"
    },
    "getUserProjectTask": {
      "method": "GET",
      "path": "/users/:userId/projects/:projectId/tasks/:taskId"
    },
    "getUserTasks": {
      "method": "GET",
      "path": "/users/:userId/tasks"
    },
    "getUserTask": {
      "method": "GET",
      "path": "/users/:userId/tasks/:taskId"
    },
    "createUserTask": {
      "method": "POST",
      "path": "/users/:userId/tasks"
    },
    "updateUserTask": {
      "method": "POST",
      "path": "/users/:userId/tasks/:taskId"
    },
    "closeUserTask": {
      "method": "POST",
      "path": "/users/:userId/tasks/:taskId/close"
    },
    "reopenUserTask": {
      "method": "POST",
      "path": "/users/:userId/tasks/:taskId/reopen"
    },
    "deleteUserTask": {
      "method": "DELETE",
      "path": "/users/:userId/tasks/:taskId"
    }
  }
}
